<?xml version="1.0" encoding="utf-8"?>


<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.administrator.imagedemo.MainActivity">

        <Button
            android:id="@+id/use_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="使用图片"/>

        <Button
            android:id="@+id/canvas_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="查看绘制图片"/>

        <Button
            android:id="@+id/draw_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="手动模拟绘制画板"/>


        <Button
            android:id="@+id/pin_ball"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="弹球游戏"/>

        <Button
            android:id="@+id/matrix"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="图形变换"/>
        <Button
            android:id="@+id/bitmap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="图形背景移动"/>

        <Button
            android:id="@+id/shader_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="使用Shader填充图形"/>

        <Button
            android:id="@+id/custom_cartoon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="自定义补间动画"/>

        <Button
            android:id="@+id/use_network_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="使用网络图片"/>

        <Button
            android:id="@+id/gesture_zoon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="图片缩放"/>

        <Button
            android:id="@+id/shared_preferences"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="共享数据"/>

        <Button
            android:id="@+id/file_io"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="文件存储"/>

        <Button
            android:id="@+id/sql_lite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="安卓数据库"/>

        <Button
            android:id="@+id/image_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="图片上传"/>

        <Button
            android:id="@+id/shear_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="剪切图片"/>

        <Button
            android:id="@+id/gesture_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="手势检测"/>
    </LinearLayout>
</ScrollView>